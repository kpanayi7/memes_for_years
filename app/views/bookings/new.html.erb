<h1 class="text-center">Book a Meme Creator</h1>

<div class="container center_div" style="width: 500px">
  <%= simple_form_for [ @meme_creator_listing, @booking ] do |f| %>
    <div class="p-3">
      <%= f.label :start_date, "Start Date:" %>
      <%= f.date_field :start_date, as: :date, value: f.object.try(:strftime,"%d/%m/%Y"), class: 'form-control' %>
    </div>
    <div class="p-3">
      <%= f.label :end_date, "End Date:" %>
      <%= f.date_field :end_date, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
    </div>
    <div class="p-3">
      <%= f.submit "Book this Meme Creator!", class: "btn btn-primary" %>
    </div>
<% end %>
</div>
